<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="itemPane" prefHeight="168.0" prefWidth="186.0" xmlns="http://javafx.com/javafx/8.0.91" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <ImageView fx:id="img" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../images/tel.jpg" />
         </image>
      </ImageView>
   </center>
   <bottom>
      <BorderPane prefHeight="48.0" prefWidth="104.0" BorderPane.alignment="CENTER">
         <left>
            <Button styleClass="button-amount-selector" fx:id="minusB" mnemonicParsing="false" text="-" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin></Button>
         </left>
         <center>
            <Label fx:id="number" alignment="CENTER" prefHeight="25.0" prefWidth="79.0" text="10" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" />
               </BorderPane.margin></Label>
         </center>
         <right>
            <Button styleClass="button-amount-selector" fx:id="plusB" mnemonicParsing="false" text="+" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="10.0" />
               </BorderPane.margin></Button>
         </right>
         <top>
            <Label fx:id="name" text="Item" BorderPane.alignment="CENTER" />
         </top>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </BorderPane>
   </bottom>
   <padding>
      <Insets bottom="5.0" top="5.0" />
   </padding>
</BorderPane>
